#!/bin/sh /etc/rc.common

START=96

local res="/usr/sbin/aproamresponse"
local req="/usr/sbin/aproamrequest"

start(){
        local pid=$(pgrep -f "$res")
        if [ "" = "$pid" ];then
            "$res" &
        fi
        pid=$(pgrep -f "$req")
        if [ "" = "$pid" ];then
            "$req" &
        fi
}

stop(){
	local pid=$(pgrep -f "$res")
        if [ "" != "$pid" ];then
            kill -15 "$pid"
        fi		
	local pid=$(pgrep -f "$req")
        if [ "" != "$pid" ];then
            kill -15 "$pid"
        fi		
}

restart(){
        stop
        start
}
